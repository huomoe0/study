<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.huomoe.mapper.UserMapper">
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user(id,name,username,password,role)
        values(#{id},#{name},#{username},#{password},#{role});
    </insert>

    <delete id="deleteById">
        delete from tb_user
        where username = #{username};
    </delete>

    <select id="selectAll" resultType="com.huomoe.vo.User">
        select * from tb_user;
    </select>


    <select id="checkAccount" resultType="com.huomoe.vo.User">
        select * from tb_user where username=#{username} and password=#{password};
    </select>

</mapper>
